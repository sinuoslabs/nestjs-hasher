{
  "name": "@sinuos/nestjs-hasher",
  "version": "1.1.3",
  "description": "NestJS hash package to hash any string with bcrypt or argon",
  "license": "MIT",
  "keywords": [
    "nest",
    "nestjs",
    "hasher",
    "bcrypt",
    "argon"
  ],
  "scripts": {
    "build": "rimraf -rf dist && tsc -p tsconfig.json",
    "format": "prettier --write \"{lib,test}/**/*.ts\"",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "test": "jest --force-exit --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test:e2e": "jest --config ./tests/jest-e2e.json --runInBand",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "files": [
    "dist/**/*",
    "*.md",
    "index.js",
    "index.d.ts"
  ],
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0 || ^9.0.8 || ^10.2.7",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "argon2": "0.31.1",
    "bcrypt": "5.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-angular": "19.8.1",
    "@nestjs/common": "11.1.3",
    "@nestjs/core": "11.1.3",
    "@nestjs/platform-express": "11.1.3",
    "@nestjs/testing": "11.1.3",
    "@semantic-release/git": "10.0.1",
    "@types/jest": "30.0.0",
    "@types/node": "22.16.3",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.1",
    "husky": "9.1.7",
    "jest": "30.0.4",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "semantic-release": "24.2.6",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3"
  },
  "lint-staged": {
    "**/*": "pretty-quick --staged"
  },
  "author": {
    "name": "Houssene Dao",
    "email": "dao.houssene@gmail.com",
    "url": "https://twitter.com/houssenedao"
  },
  "homepage": "https://github.com/sinuoslabs/nestjs-hasher#readme",
  "bugs": {
    "url": "https://github.com/sinuoslabs/nestjs-hasher/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinuoslabs/nestjs-hasher"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
